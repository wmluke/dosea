datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Dataset {
    id         String @id @default(cuid())
    name       String
    type       String
    connection String

    workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: SetNull, onUpdate: NoAction)
    workspaceId String?

    queries DatasetQuery[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Workspace {
    id       String    @id @default(cuid())
    name     String
    datasets Dataset[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model DatasetQuery {
    id        String  @id @default(cuid())
    name      String?
    query     String
    dataset   Dataset @relation(fields: [datasetId], references: [id])
    datasetId String

    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @updatedAt
    ChartConfig ChartConfig[]

    @@map("Query")
}

model ChartConfig {
    id         String       @id @default(cuid())
    configJson String
    type       String
    query      DatasetQuery @relation(fields: [queryId], references: [id])
    queryId    String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
